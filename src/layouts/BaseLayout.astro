---
import '../styles/global.css';
import { siteConfig } from '../site';

interface Props {
  title?: string;
  description?: string;
  canonicalPath?: string;
  image?: string;
}

const {
  title = siteConfig.title,
  description = siteConfig.description,
  canonicalPath = Astro.url.pathname,
  image = siteConfig.image
} = Astro.props;

const canonicalUrl = new URL(canonicalPath, Astro.site);
const pageTitle = title === siteConfig.title ? title : `${title} | ${siteConfig.title}`;
const imageUrl = new URL(image, Astro.site);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <slot name="head" />
    <title>{pageTitle}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalUrl} />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content={siteConfig.siteName} />
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:image" content={imageUrl} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={pageTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={imageUrl} />
    <link rel="alternate" type="application/rss+xml" title="Patrick Roos RSS" href="/rss.xml" />
    <script is:inline>
      (() => {
        const savedTheme = localStorage.getItem('theme');
        const prefersLight = window.matchMedia('(prefers-color-scheme: light)').matches;
        const theme = savedTheme || (prefersLight ? 'light' : 'dark');
        document.documentElement.setAttribute('data-theme', theme);
      })();
    </script>
  </head>
  <body>
    <main class="container">
      <header class="site-header">
        <div class="header-controls">
          <nav>
            <a href="/">About</a>
            <a href="/posts/">Posts</a>
            <a href="/publications/">Publications</a>
          </nav>
          <button id="theme-toggle" class="theme-toggle" type="button" aria-label="Toggle color theme">
            <svg class="theme-icon" viewBox="0 0 24 24" aria-hidden="true">
              <circle class="sun-core" cx="12" cy="12" r="4.2"></circle>
              <g class="sun-rays">
                <line x1="12" y1="1.8" x2="12" y2="5"></line>
                <line x1="12" y1="19" x2="12" y2="22.2"></line>
                <line x1="1.8" y1="12" x2="5" y2="12"></line>
                <line x1="19" y1="12" x2="22.2" y2="12"></line>
                <line x1="4.5" y1="4.5" x2="6.9" y2="6.9"></line>
                <line x1="17.1" y1="17.1" x2="19.5" y2="19.5"></line>
                <line x1="17.1" y1="6.9" x2="19.5" y2="4.5"></line>
                <line x1="4.5" y1="19.5" x2="6.9" y2="17.1"></line>
              </g>
              <path
                class="moon-shape"
                d="M14.6 3.5c-1.4 1-2.3 2.7-2.3 4.6 0 3 2.4 5.4 5.4 5.4 1.2 0 2.2-.3 3.1-.9-.6 4-4 7.1-8.2 7.1-4.6 0-8.4-3.8-8.4-8.4s3.8-8.4 8.4-8.4c.7 0 1.4.1 2 .3z"></path>
            </svg>
            <span class="sr-only">Toggle color theme</span>
          </button>
        </div>
      </header>
      <slot />
      <footer class="site-footer">
        <p>Â© {new Date().getFullYear()} Patrick Roos</p>
      </footer>
    </main>
    <script is:inline>
      (() => {
        const button = document.getElementById('theme-toggle');
        if (!button) return;

        button.addEventListener('click', () => {
          const theme = document.documentElement.getAttribute('data-theme') === 'light' ? 'dark' : 'light';
          document.documentElement.setAttribute('data-theme', theme);
          localStorage.setItem('theme', theme);
        });
      })();
    </script>
  </body>
</html>
